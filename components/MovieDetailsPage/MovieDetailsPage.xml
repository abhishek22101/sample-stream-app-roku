<?xml version="1.0" encoding="utf-8" ?>
<component name="MovieDetailsPage" extends="Group">
    <interface>
        <field id="content" type="node" onChange="onContentChanged"/>
        <field id="visible" type="boolean" value="false"/>
    </interface>
    <script type="text/brightscript" uri="MovieDetailsPage.brs"/>
    <children>
        <Rectangle
            id="background"
            width="1920"
            height="1080"
            color="0x000000FF"/>
        <Poster
            id="poster"
            translation="[200,150]"
            width="400"
            height="600"
            loadDisplayMode="scaleToFit"/>
        <Label
            id="title"
            translation="[700,150]"
            font="font:LargeBoldSystemFont"
            width="1000"
            height="60"/>
        <Label
            id="description"
            translation="[700,250]"
            font="font:MediumSystemFont"
            width="1000"
            height="400"
            wrap="true"/>
    </children>
</component> 