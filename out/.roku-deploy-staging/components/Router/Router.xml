		<function name="NavigateTo" />
		<function name="HideTop" />
		<function name="SetVideoContent" />
		<function name="PlayVideo" />
    </interface>
    
    <!-- main handler -->
    <script type="text/brightscript" uri="pkg:/components/Router/Router.brs" />

	<children>
        <Group
        	id= "ScreensWithNavigation">
